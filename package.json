{
  "name": "next-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build",
    "studio": "yarn prisma studio",
    "migrate:save": "yarn prisma migrate save --experimental",
    "migrate:up": "yarn prisma migrate up --experimental",
    "migrate:down": "yarn prisma migrate down --experimental"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.3",
    "@chakra-ui/react": "^1.1.5",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@headlessui/react": "0.2.0",
    "@prisma/client": "^2.15.0",
    "framer-motion": "^3.2.2-rc.1",
    "next": "10.0.2",
    "next-auth": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "^6.12.1",
    "react-icons": "^4.1.0",
    "react-query": "2.26.3",
    "twitter": "^1.7.1",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.12.0",
    "@tailwindcss/aspect-ratio": "0.2.0",
    "@tailwindcss/forms": "0.2.1",
    "@tailwindcss/typography": "0.3.1",
    "@tailwindcss/ui": "0.7.2",
    "@types/next-auth": "3.1.16",
    "@types/node": "14.14.9",
    "@types/react": "17.0.0",
    "@types/twitter": "^1.7.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": ">=4",
    "lint-staged": ">=10.5.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.1.8",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.2.0",
    "tailwindcss": "2.0.1",
    "typescript": "4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 npm-run-all --parallel check-types && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "yarn run lint"
    ],
    "*.+(js|json|ts|tsx)": [
      "yarn run format"
    ]
  }
}
